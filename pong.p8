function btn_press()

	if (btn(0)) then
		move["bar3_x"] -= move_speed
	end
	if (btn(1)) then
		move["bar3_x"] += move_speed
	end
	if (btn(2)) then
		move["bar2_y"] -= move_speed
	end
	if (btn(3)) then
		move["bar2_y"] += move_speed
	end
	if (btn(4)) then
		move["bar1_y"] -= move_speed
	end
	if (btn(5)) then
		move["bar1_y"] += move_speed
	end
end

function screen_out()

	if(move["bar3_x"]<=0) then
		move["bar3_x"] = 0
	end
	if(move["bar3_x"]>=108) then
		move["bar3_x"] = 108
	end
	
	if(move["bar1_y"]<=0) then
