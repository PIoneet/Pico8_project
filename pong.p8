pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
function _init()
	player1_x = 0
	player1_y = 54
	
	player2_x = 125
	player2_y =	54
	
	move_speed = 2
	
	game_start = false
	score = 1234
end

function _update()
	btn_press()
	screen_out()

	
end

function _draw()
	cls(1)
	game_intro()
	sspr(8,2,8,1,player1_x, player1_y, 20,20)
	sspr(23,2,8,1,player2_x, player2_y,20,20)
	print('score: '..score, 0, 120, 8)
end

function game_intro()
	print("game start",47,58,100)
	
end

function btn_press()
	if (btn(2)) then
		player2_y -= move_speed
	end
	if (btn(3)) then
		player2_y += move_speed
	end
	if (btn(4)) then
		player1_y -= move_speed
	end
	if (btn(5)) then
		player1_y += move_speed
	end
end

function screen_out()
	if(player1_y<=0) then
		player1_y = 0
	end
	if(player1_y>=108) then
		player1_y = 108
	end
	
	if(player2_y<=0) then
		player2_y = 0
	end
	if(player2_y>=108) then
		player2_y = 108
end

end
